<center>
<% if doctor_signed_in? %>

	<h2 class="mt-3"  style="font-family: Ubuntu;">Doctor signed in</h2>
	<hr>
	<h1>Hello Dr.<%=current_doctor.firstname %> </h1><hr>
	<h3>Check Appointments of the paitents or Log out</h3>
	<%= link_to "Check Appointment", appointments_path, class:"btn btn-success" %>
	<%= link_to "Log out", destroy_doctor_session_path, method: :delete, class:"btn btn-success"%>

<% else %>
	<h2 class="mt-3"  style="font-family: Ubuntu;">Patients section</h2>
	<hr>

	<% if patient_signed_in? %>
	<h1>Welcome <%=current_patient.firstname %> </h1>
	<hr>
	<h3>Make new Appointment</h3>
	<%= link_to 'New Appointment', doctors_list_path ,class:"btn btn-primary"%>
	<%= link_to "Log out", destroy_patient_session_path, method: :delete, class:'btn btn-primary'%>
	<% else %>
	<h1>Sign up or Log in to make new appointment</h1>
	<%= link_to "Sign up", new_patient_registration_path, class:"btn btn-success"%>
	<%= link_to "Log in", new_patient_session_path, class:"btn btn-success" %>
	<% end %>
<% end %>
</center>