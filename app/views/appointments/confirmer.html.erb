<h1 class="mt-2" style="font-family: Ubuntu;">confirmed</h1>

<%= form_with(model: appointment) do |form| %>
  <% if appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :Change appointment date %>
    <%= form.datetime_select :appointment_date %>
  </div>  
  <div class="field">
    <%= form.label :doctor_id %>
    <%= form.text_field :doctor_id , value:@did%>
  </div>  
  <div class="field">
    <%= form.label :patient_id %>
    <%= form.text_field :patient_id , value:@pid%>
  </div>
  <div class="field">
    <%= form.label :hold_status %>
    <%= form.text_field :hold_status , value:true%>
  </div>

  <div class="actions">
    <%= form.submit value:"confirm and send mail" %>
  </div>
<% end %>
