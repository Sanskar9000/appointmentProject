    <%= form.text_field :doctor_id , value:@did, type:"hidden"%>
  </div>  
  <div class="field">
    <%= form.text_field :patient_id , value:@pid, type:"hidden"%>
  </div>
  <div class="field">
    <%= form.text_field :hold_status , value:true, type:"hidden"%>
  </div>  
  <div class="field">
    <%= form.text_field :confirmation_status, type:"hidden"%>
  </div>
  <br>
  <div class="actions">
    <%= form.submit class:"btn btn-success"%>
  </div>
<% end %>
